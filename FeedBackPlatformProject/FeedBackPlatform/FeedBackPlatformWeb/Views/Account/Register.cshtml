
@model FeedBackPlatformWeb.Models.Account.RegisterModel
@{
    ViewBag.Title = "Register";
}

<div class="auth">
    <div class="auth-container">
        <div class="card">
            <header class="auth-header">
                <h1 class="auth-title">
                    <div class="logo">
                        <span class="l l1"></span>
                        <span class="l l2"></span>
                        <span class="l l3"></span>
                        <span class="l l4"></span>
                        <span class="l l5"></span>
                    </div> FeedBack Platform
                </h1>
            </header>
            <div class="auth-content">
                <p class="text-center">SIGNUP TO GET INSTANT ACCESS</p>
                <form id="register-form" action="@Url.Action("Register","Account")" method="POST">
                    <div class="form-group">
                        <label for="firstname">Name</label>
                        <div class="row">
                            <div class="col-sm-6">
                                @Html.TextBoxFor(m => m.FirstName, new { @class = "form-control underlined", placeholder = "Enter firstname" })
                            </div>
                            <div class="col-sm-6">
                                @Html.TextBoxFor(m => m.LastName, new { @class = "form-control underlined", placeholder = "Enter lastname" })
                            </div>
                        </div>
                        @Html.ValidationMessageFor(m => m.FirstName)
                        @Html.ValidationMessageFor(m => m.LastName)
                    </div>
                    <div class="form-group">
                        <label for="email">Email</label>
                        @Html.TextBoxFor(m => m.Email, new { @class = "form-control underlined", placeholder = "Enter email address" })
                        @Html.ValidationMessageFor(m => m.Email)
                    </div>
                    <div class="form-group">
                        <label for="password">Password</label>
                        <div class="row">
                            <div class="col-sm-6">
                                @Html.PasswordFor(m => m.Password, new { @class = "form-control underlined", placeholder = "Enter password" })               
                            </div>
                            <div class="col-sm-6">
                                @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control underlined", placeholder = "Re-type password" })                                
                            </div>
                        </div>
                        @Html.ValidationMessageFor(m => m.Password)
                        @Html.ValidationMessageFor(m => m.ConfirmPassword)
                    </div>
                    <div class="form-group">
                        <label for="agree">
                            <input class="checkbox" name="agree" id="agree" type="checkbox" required="">
                            <span>
                                Agree the terms and
                                <a href="#">policy</a>
                            </span>
                        </label>
                    </div>
                    <div class="form-group">
                        <button type="submit" class="btn btn-block btn-primary">Sign Up</button>
                    </div>
                    <div class="form-group">
                        <p class="text-muted text-center">
                            Already have an account?
                            <a href="@Url.Action("Login","Account")">Login!</a>
                        </p>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>